@model AmperImp.Models.Venta
@using AmperImp.Models

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form id="formVenta" asp-action="CreateOrEdit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="DetallesJson" id="DetallesJson" />
            <!-- Comprador + Fecha -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label text-primary fw-bold">Comprador</label>
                    <input type="text" name="Comprador" class="form-control" value="@(Model?.Detalles?.FirstOrDefault()?.Comprador ?? "")" />
                </div>
                <div class="col-md-6">
                    <label class="form-label text-primary fw-bold">Fecha</label>
                    <input type="datetime-local" name="Fecha" class="form-control" value="@Model.Fecha.ToString("yyyy-MM-ddTHH:mm")" />
                </div>
            </div>

            <hr />

            <!-- Selección de detalle -->
            <div class="row g-2 align-items-end mb-3">
                <div class="col-md-4">
                    <label class="form-label text-primary fw-bold">Producto</label>
                    <select id="selectProducto" class="form-select">
                        <option value="">-- Seleccione un producto --</option>
                        @foreach (var p in ViewBag.Productos as List<Producto>)
                        {
                            <option value="@p.Id" data-precio="@p.PrecioVenta">@p.Nombre</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label text-primary fw-bold">Talle</label>
                    <select id="selectTalle" class="form-select">
                        <option value="">-- Seleccione talle --</option>
                        @foreach (Talle t in ViewBag.Talles as List<Talle>)
                        {
                            <option value="@t">@t</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label text-primary fw-bold">Cantidad</label>
                    <input type="number" id="inputCantidad" class="form-control" min="1" value="1" />
                </div>
                <div class="col-md-3 d-grid">
                    <button type="button" class="btn btn-success" id="btnAgregarDetalle">
                        <i class="fa fa-plus me-1"></i> Agregar detalle
                    </button>
                </div>
            </div>

            <!-- Tabla de detalles -->
            <div id="divDetalles">
                <table class="table table-sm table-bordered table-striped align-middle text-center" id="tablaDetalles">
                    <thead>
                        <tr>
                            <th class ="align-middle text-center">Producto</th>
                            <th class ="align-middle text-center">Talle</th>
                            <th class="align-middle text-center">Cantidad</th>
                            <th class="align-middle text-center">Unitario</th>
                            <th class="align-middle text-center">Subtotal</th>
                            <th class="align-middle text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Detalles == null || !Model.Detalles.Any())
                        {
                            <tr id="filaVacia">
                                <td colspan="6" class="text-center text-muted">No hay detalles cargados.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var d in Model.Detalles)
                            {
                                <tr data-productoid="@d.ProductoId" data-talle="@d.Talle">
                                    <td>@d.NombreProducto</td>
                                    <td>@d.Talle</td>
                                    <td>@d.Cantidad</td>
                                    <td>@String.Format("{0:C}", d.PrecioUnitario)</td>
                                    <td>@String.Format("{0:C}", d.Subtotal)</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-danger btnEliminarDetalle">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <hr />

            <!-- Botones -->
            <div class="text-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fa fa-floppy-disk me-1"></i> Guardar
                </button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                    <i class="fa fa-xmark me-1"></i> Cancelar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {

}
